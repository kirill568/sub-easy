<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:padding="16dp"
    android:background="@drawable/shape_subscription"
    android:orientation="horizontal">

    <com.google.android.material.imageview.ShapeableImageView
        style="@style/subscriptionIcon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/ic_launcher"
        app:shapeAppearanceOverlay="@style/circleImageView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/name"
                tools:text="Netflix"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/red_rose_bold"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cost"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:layout_weight="1"
                android:fontFamily="@font/red_rose_bold"
                android:gravity="end"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                tools:text="$8.44" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/due"
                tools:text="Due in 6 days"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginBottom="4dp"
                android:layout_gravity="start"
                android:fontFamily="@font/red_rose_regular"
                android:textColor="@color/text_second_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/period"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:layout_weight="1"
                android:gravity="end"
                android:fontFamily="@font/red_rose_regular"
                android:textColor="@color/text_second_color"
                android:textSize="14sp"
                tools:text="/Month" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>