<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="163dp"
    android:layout_height="130dp"
    android:background="@drawable/shape_card"
    android:orientation="vertical"
    android:padding="18dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shapeableImageView2"
        style="@style/subscriptionIcon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundedImageView" />

    <TextView
        android:id="@+id/cost"
        android:layout_width="wrap_content"
        android:layout_height="20sp"
        android:layout_gravity="top"
        android:fontFamily="@font/red_rose_bold"
        android:gravity="top"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@+id/shapeableImageView2"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="$8.44" />

    <TextView
        android:id="@+id/period"
        android:layout_width="wrap_content"
        android:layout_height="17sp"
        android:layout_gravity="bottom"
        android:fontFamily="@font/red_rose_regular"
        android:gravity="top"
        android:textColor="@color/text_second_color"
        android:textSize="14sp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@+id/shapeableImageView2"
        app:layout_constraintTop_toBottomOf="@+id/cost"
        tools:text="/Month" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:fontFamily="@font/red_rose_bold"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shapeableImageView2"
        tools:text="Netflix" />

    <TextView
        android:id="@+id/due"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/red_rose_regular"
        android:textColor="@color/text_second_color"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        tools:text="Due in 2 days" />
</androidx.constraintlayout.widget.ConstraintLayout>